<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layoutDirection="ltr"
    android:background="@color/white"
    tools:context="Fragments.ShowProfileFragment">

    <!-- TODO: Update blank fragment layout -->
    <RelativeLayout
        android:layout_margin="8dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/img_ShowProfile_UserName"
            android:layout_margin="8dp"
            android:src="@drawable/baseline_supervised_user_circle_24"
            android:layout_width="50dp"
            android:layout_height="50dp"/>

        <TextView
            android:id="@+id/txt_ShowProfile_UserName"
            android:layout_margin="20dp"
            android:layout_toRightOf="@id/img_ShowProfile_UserName"
            android:textColor="@color/black"
            android:text="UserName :"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <ImageView
            android:id="@+id/img_ShowProfile_Name"
            android:layout_below="@id/img_ShowProfile_UserName"
            android:layout_margin="8dp"
            android:src="@drawable/baseline_person_24"
            android:layout_width="50dp"
            android:layout_height="50dp"/>

        <TextView
            android:id="@+id/txt_ShowProfile_Name"
            android:layout_below="@id/img_ShowProfile_UserName"
            android:layout_margin="20dp"
            android:layout_toRightOf="@id/img_ShowProfile_Name"
            android:textColor="@color/black"
            android:text="Name :"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <ImageView
            android:id="@+id/img_ShowProfile_Email"
            android:layout_below="@id/img_ShowProfile_Name"
            android:layout_margin="8dp"
            android:src="@drawable/baseline_contact_mail_24"
            android:layout_width="50dp"
            android:layout_height="50dp"/>

        <TextView
            android:id="@+id/txt_ShowProfile_Email"
            android:layout_below="@id/img_ShowProfile_Name"
            android:layout_margin="20dp"
            android:layout_toRightOf="@id/img_ShowProfile_Email"
            android:textColor="@color/black"
            android:text="Email :"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <ImageView
            android:id="@+id/img_ShowProfile_Phone"
            android:layout_below="@id/img_ShowProfile_Email"
            android:layout_margin="8dp"
            android:src="@drawable/baseline_contact_phone_24"
            android:layout_width="50dp"
            android:layout_height="50dp"/>

        <TextView
            android:id="@+id/txt_ShowProfile_Phone"
            android:layout_below="@id/img_ShowProfile_Email"
            android:layout_margin="20dp"
            android:layout_toRightOf="@id/img_ShowProfile_Phone"
            android:textColor="@color/black"
            android:text="Phone :"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </RelativeLayout>

</FrameLayout>