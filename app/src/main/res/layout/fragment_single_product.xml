<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layoutDirection="ltr"
    android:background="@color/white"
    tools:context="Fragments.SingleProductFragment">

    <!-- TODO: Update blank fragment layout -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/img_Single"
                android:layout_margin="8dp"
                android:layout_centerHorizontal="true"
                android:src="@drawable/ic_launcher_background"
                android:layout_width="250dp"
                android:layout_height="250dp"/>

            <TextView
                android:id="@+id/txt_Single_title"
                android:layout_margin="8dp"
                android:textColor="@color/black"
                android:text="Title :"
                android:layout_below="@id/img_Single"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/txt_Single_Price"
                android:layout_margin="8dp"
                android:textColor="@color/black"
                android:text="Price :"
                android:layout_below="@id/txt_Single_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/txt_Single_Category"
                android:layout_margin="8dp"
                android:textColor="@color/black"
                android:text="Category :"
                android:layout_below="@id/txt_Single_Price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/txt_Single_Rate"
                android:layout_margin="8dp"
                android:textColor="@color/black"
                android:text="Rate :"
                android:layout_below="@id/txt_Single_Category"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/txt_Single_Count"
                android:layout_margin="8dp"
                android:textColor="@color/black"
                android:text="Count :"
                android:layout_below="@id/txt_Single_Rate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/txt_Single_Description"
                android:layout_marginBottom="94dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="8dp"
                android:textColor="@color/black"
                android:text="Description :"
                android:layout_below="@id/txt_Single_Count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </RelativeLayout>

    </ScrollView>

</FrameLayout>