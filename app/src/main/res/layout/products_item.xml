<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layoutDirection="ltr"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp"
    android:layout_margin="4dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/img_productsItem"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_marginStart="4dp"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="4dp"
            android:layout_marginBottom="4dp"
            android:src="@drawable/ic_launcher_background" />

        <TextView
            android:id="@+id/txt_productsItem_Title"
            android:layout_margin="8dp"
            android:layout_toRightOf="@id/img_productsItem"
            android:textColor="@color/black"
            android:text="Title:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/txt_productsItem_Price"
            android:layout_marginTop="54dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_below="@id/txt_productsItem_Title"
            android:layout_toRightOf="@id/img_productsItem"
            android:textColor="@color/black"
            android:text="Price:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>


        <TextView
            android:id="@+id/txt_productsItem_Description"
            android:layout_margin="8dp"
            android:layout_below="@id/img_productsItem"
            android:textColor="@color/black"
            android:textSize="12sp"
            android:text="Description:"
            android:maxLines="3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>


    </RelativeLayout>

</androidx.cardview.widget.CardView>